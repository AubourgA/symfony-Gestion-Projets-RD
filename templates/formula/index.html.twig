{% extends 'base.html.twig' %}

{% block title %}Hello FormulaController!{% endblock %}

{% block body %}

    


    <div class="container">
    
        {# FIL ARIANE#}
            <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="\">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_projets')}}">Projects</a></li>
                <li class="breadcrumb-item active" aria-current="page">Essais</li>
                
            </ol>
            </nav>

            {# MESSAGE D'ALERTE#}
            {%  for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{message}}
            </div>
            {% endfor %}

    <h1>Listes des Essais du Project</h1>

     <table class="table table-hover text-center mt-4">
            <thead>
              <tr>
               <th scope="col">ID</th>
                <th scope="col">Suject</th>
                <th scope="col">Ajouté le</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>

                {% for data in datasFormula %}
                
                  <tr class="table-primary align-middle">
                    <th scope="row ">{{data.id}}</th>
                    <td>{{data.subject}}</td>
                    <td>{{data.createdAt | date('d-m-Y à H:i:s')}}</td>
                    <td>
                        <a href="{{ path('app_edit_formula', {'id': data.id}) }}" class="btn btn-info"> <i class="fa-solid fa-eye"></i> Voir</a>
                    </td>
                 </tr>
                {% endfor %}

            </tbody>

        </table>
        {# paginator#}
        <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(datasFormula) }}
        </div>
    </div>
{% endblock %}
