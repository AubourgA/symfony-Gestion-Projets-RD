{% extends 'base.html.twig' %}

{% block title %}Espace Creation{% endblock %}

{% block body %}
    <div class="container">
    
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_materials')}}">Materials</a></li>
                <li class="breadcrumb-item active" aria-current="page">Create</li>
            </ol>
        </nav>


        <h1> Creation d'une nouvelle matiere premiere</h1>
    
        

         {{form_start(form)}}
            <div class="form-group">
                {{ form_label(form.name)}}
                {{ form_widget(form.name)}}
                 <div class="form-error">
                  {{ form_errors(form.name)}}
                </div>
            </div>

              <div class="form-group">
                {{ form_label(form.vendor)}}
                {{ form_widget(form.vendor)}}
                <div class="invalid-feedback">
                 {{ form_errors(form.vendor)}}
                </div>
            </div>

             <div class="form-group">
                {{ form_label(form.price)}}
                {{ form_widget(form.price)}}
                 <div class="invalid-feedback">
                {{ form_errors(form.price)}}
                </div>
            </div>

               <div class="form-group">
                {{ form_label(form.unit)}}
                {{ form_widget(form.unit)}}
                <div class="invalid-feedback">
                {{ form_errors(form.unit)}}
                </div>
            </div>

               <div class="form-group">
                {{ form_row(form.submit)}}
            </div>


   {{form_end(form)}}

    </div>

{% endblock %}